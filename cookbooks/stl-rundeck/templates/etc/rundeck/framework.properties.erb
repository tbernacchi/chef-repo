# framework.properties -
#

# ----------------------------------------------------------------
# Rundeck server connection information
# ----------------------------------------------------------------

framework.server.name = <%= node['fqdn'] %>
framework.server.hostname = <%= node['fqdn'] %>
framework.server.port = 4440
framework.server.url = <%= node['rundeck']['prod']['framework.server.url'] %>
#framework.server.url = http://<%= node['fqdn'] %>:4440

# ----------------------------------------------------------------
# Installation locations
# ----------------------------------------------------------------

rdeck.base=<%= node['rundeck'][node.chef_environment]['rdeck.base'] %>

framework.projects.dir=<%= node['rundeck'][node.chef_environment]['project.dir'] %>
framework.etc.dir=/etc/rundeck
framework.var.dir=<%= node['rundeck'][node.chef_environment]['framework.var.dir'] %>
framework.tmp.dir=<%= node['rundeck'][node.chef_environment]['framework.tmp.dir'] %>
framework.logs.dir=<%= node['rundeck'][node.chef_environment]['framework.logs.dir'] %>
framework.libext.dir=<%= node['rundeck'][node.chef_environment]['framework.libext.dir'] %>

# ----------------------------------------------------------------
# SSH defaults for node executor and file copier
# ----------------------------------------------------------------

framework.ssh.keypath = /var/lib/rundeck/.ssh/id_rsa
framework.ssh.user = <%= node['rundeck'][node.chef_environment]['framework.ssh.user'] %>
#framework.ssh-password-storage-path = /var/lib/rundeck/var/storage/content/keys
framework.ssh-password-storage-path = <%= node['rundeck'][node.chef_environment]['framework.ssh-password-storage-path'] %>

# ssh connection timeout after a specified number of milliseconds.
# "0" value means wait forever.
framework.ssh.timeout = 0


