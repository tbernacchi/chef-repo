[Unit]
Description = App validacao-aceite
After = syslog.target

[Service]
User = svc-validacao
WorkingDirectory = /app/standalone/validacao-aceite/
ExecStart = /usr/bin/java -Xmx128m -Xss1m -jar -Djava.net.preferIPv4Stack=true -Dserver.port=8086 /app/standalone/validacao-aceite/validacao-aceite.jar --spring.config.location=classpath:file:/app/standalone/validacao-aceite/conf/application.properties
ExecStop = /bin/kill -s TERM $MAINPID
Restart = always
SuccessExitStatus = 143

[Install]
WantedBy = multi-user.target
