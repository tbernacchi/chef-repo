#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:6443/ -o /dev/null || errorExit "Error GET https://localhost:6443/"
if ip addr | grep -q <%= node['keepalived'][node.chef_environment]['virtal_ip'] %>; then
    curl --silent --max-time 2 --insecure https://<%= node['keepalived'][node.chef_environment]['virtal_ip'] %>:6443/ -o /dev/null || errorExit "Error GET https://<%= node['keepalived'][node.chef_environment]['virtal_ip'] %>:6443/"
fi
