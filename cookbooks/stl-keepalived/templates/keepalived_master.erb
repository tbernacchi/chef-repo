! Configuration File for keepalived
global_defs {
  router_id LVS_DEVEL
}

vrrp_script check_apiserver {
  script "<%= node['keepalived'][node.chef_environment][node.chef_environment]['script_path'] %>"
  interval 3
  weight -2
  fall 10
  rise 2
}

vrrp_instance VI_1 {
    state MASTER
    interface <%= node['keepalived'][node.chef_environment]['interface'] %>
    virtual_router_id 51
    priority <%= node['keepalived'][node.chef_environment]['master_prio'] %>
    authentication {
        auth_type PASS
        auth_pass <%= node['keepalived'][node.chef_environment]['pass'] %>
    }
    virtual_ipaddress {
        <%= node['keepalived'][node.chef_environment]['virtal_ip'] %>
    }
    track_script {
        check_apiserver
    }
}
